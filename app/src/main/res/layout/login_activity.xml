<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.malcoln.prototipoinpal.controller.LoginActivity">



<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"

    android:padding="@dimen/custom_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="#fff"
            android:src="@drawable/logo192px" />
    </RelativeLayout>


</FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="96dp"
        android:background="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="6dp">

        <LinearLayout
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.1dp"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textAlignment="gravity"
                    android:textColor="#020202"
                    android:textSize="16sp"

                    />

                <ImageButton
                    android:id="@+id/usernameId"
                    android:layout_width="wrap_content"
                    android:layout_height="24sp"
                    android:layout_marginRight="2dp"

                    android:background="#ffffff"
                    android:inputType="text"
                    android:src="@drawable/help14px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="0.5dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="6dp"
                    custom:cardCornerRadius="2dp"
                    app:cardUseCompatPadding="true">
                <EditText
                    android:id="@+id/userEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="32sp"
                    android:layout_below="@+id/usernameId"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:inputType="textEmailAddress"
                    android:textColor="#000"
                    android:textColorHint="#ffffff"
                    tools:ignore="ObsoleteLayoutParam" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.1dp"
                    android:layout_weight="1"
                    android:text="Senha"
                    android:textAlignment="gravity"
                    android:textColor="#020202"
                    android:textSize="16sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="6dp"
                    custom:cardCornerRadius="2dp"
                    app:cardUseCompatPadding="true">
                <EditText
                    android:id="@+id/passwordId"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@+id/usernameId"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:inputType="textWebPassword"
                    android:textColor="#000"
                    android:textColorHint="#ffffff"

                    tools:ignore="ObsoleteLayoutParam" />
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="2dp"
                        >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registre uma nova conta" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:cardCornerRadius="2dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="2dp"
                        >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esqueci minha senha" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <Button
                    android:id="@+id/signInId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="6dp"
                    android:stateListAnimator="@null"
                    android:background="@drawable/acessar_button"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Acessar"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingBottom="2dp"
            android:paddingTop="260dp"
            android:baselineAligned="true">
        <TextView
            android:textAlignment="center"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="@string/slogan_inpao" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
