<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/fundo_invertido_btn_tarefas">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#073e86"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_btn_tarefas"
        android:orientation="horizontal"
        android:id="@+id/btnPesquisaCep">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imgIconesCep"
                app:srcCompat="@android:drawable/ic_menu_zoom"
                android:layout_above="@+id/imageView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

        <TextView
            android:id="@+id/titulo_tarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="TAREFA"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/descritivo_tarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="trajeto"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/titulo_tarefa"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#f18802" />

        <ImageView
            android:id="@+id/imageIcoZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView5"
            android:layout_marginEnd="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_toLeftOf="@+id/imgIconesCep"
            android:layout_toStartOf="@+id/imgIconesCep"
            app:srcCompat="@android:drawable/ic_menu_zoom" />


    </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>