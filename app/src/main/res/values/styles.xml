<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PersonalizadoTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomizadoTabText</item>
        <item name="tabSelectedTextColor">@color/tabSelecionadoCor</item>
        <item name="tabIndicatorHeight">6dp</item>
        <item name="tabIndicatorColor">@color/tabIndicadorCor</item>
    </style>
    <style name="CustomizadoTabText" parent="TextAppearance.AppCompat.Button"/>




</resources>
